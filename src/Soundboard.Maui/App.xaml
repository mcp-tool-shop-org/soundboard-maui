<?xml version="1.0" encoding="UTF-8" ?>
<Application
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converters="clr-namespace:Soundboard.Maui.Converters"
    x:Class="Soundboard.Maui.App">
    <Application.Resources>
        <ResourceDictionary>
            <converters:BoolToOpacityConverter x:Key="WelcomeOpacityConverter" TrueOpacity="0.3" FalseOpacity="1.0" />
            <converters:InvertBoolConverter x:Key="InvertBoolConverter" />
            <converters:LoadingTitleConverter x:Key="LoadingTitleConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
