<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Soundboard.Maui.Views.MainPage"
    Title="Soundboard">

    <Grid>

        <!-- Main UI (always present, dimmed when welcome is showing) -->
        <ScrollView Opacity="{Binding ShowWelcome, Converter={StaticResource WelcomeOpacityConverter}}">
            <VerticalStackLayout Spacing="16" Padding="20" MaximumWidthRequest="600">

                <!-- Engine status -->
                <Label
                    Text="{Binding Status}"
                    FontSize="12"
                    TextColor="{AppThemeBinding Light=Gray, Dark=LightGray}"
                    HorizontalOptions="Start" />

                <!-- 1. Text input -->
                <VerticalStackLayout Spacing="4">
                    <Label
                        Text="What should it say?"
                        FontSize="16"
                        FontAttributes="Bold" />
                    <Editor
                        Placeholder="Type anything you want to hear spoken..."
                        Text="{Binding Text}"
                        AutoSize="TextChanges"
                        HeightRequest="120"
                        FontSize="15" />
                </VerticalStackLayout>

                <!-- Hint -->
                <Label
                    Text="{Binding HintText}"
                    IsVisible="{Binding ShowHint}"
                    FontSize="13"
                    TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}"
                    FontAttributes="Italic" />

                <!-- 2. Pickers -->
                <VerticalStackLayout Spacing="4">
                    <Label
                        Text="How should it sound?"
                        FontSize="14"
                        TextColor="{AppThemeBinding Light=#444444, Dark=#CCCCCC}" />
                    <HorizontalStackLayout Spacing="12">
                        <Picker
                            Title="Preset"
                            ItemsSource="{Binding Presets}"
                            SelectedItem="{Binding SelectedPreset}"
                            WidthRequest="200" />
                        <Picker
                            Title="Voice"
                            ItemsSource="{Binding Voices}"
                            SelectedItem="{Binding SelectedVoice}"
                            WidthRequest="200" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>

                <!-- 3. Actions -->
                <Button
                    Text="Speak"
                    Command="{Binding SpeakCommand}"
                    FontSize="16"
                    FontAttributes="Bold"
                    HeightRequest="48"
                    BackgroundColor="{AppThemeBinding Light=#512BD4, Dark=#7C4DFF}"
                    TextColor="White"
                    HorizontalOptions="Fill" />

                <!-- Why Speak is disabled -->
                <Label
                    Text="Add a line of text to hear it spoken."
                    IsVisible="{Binding ShowSpeakHint}"
                    FontSize="12"
                    TextColor="{AppThemeBinding Light=#999999, Dark=#777777}"
                    HorizontalTextAlignment="Center" />

                <Button
                    Text="Stop"
                    Command="{Binding StopCommand}"
                    FontSize="14"
                    HeightRequest="40"
                    BackgroundColor="Transparent"
                    BorderColor="{AppThemeBinding Light=#CCCCCC, Dark=#555555}"
                    BorderWidth="1"
                    TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}"
                    HorizontalOptions="Fill"
                    IsVisible="{Binding IsSpeaking}" />

            </VerticalStackLayout>
        </ScrollView>

        <!-- Welcome overlay (first-run only) -->
        <Grid
            IsVisible="{Binding ShowWelcome}"
            BackgroundColor="{AppThemeBinding Light=#E0FFFFFF, Dark=#E0000000}"
            InputTransparent="False">

            <!-- Centered card -->
            <Border
                StrokeShape="RoundRectangle 12"
                Stroke="{AppThemeBinding Light=#DDDDDD, Dark=#333333}"
                BackgroundColor="{AppThemeBinding Light=White, Dark=#1E1E1E}"
                MaximumWidthRequest="420"
                Padding="32"
                VerticalOptions="Center"
                HorizontalOptions="Center">

                <VerticalStackLayout Spacing="20">

                    <!-- Headline -->
                    <Label
                        Text="Welcome â€” let's hear something cool"
                        FontSize="22"
                        FontAttributes="Bold"
                        HorizontalTextAlignment="Center" />

                    <!-- Subhead -->
                    <Label
                        Text="Type a line, pick a vibe, and press Speak."
                        FontSize="15"
                        TextColor="{AppThemeBinding Light=#555555, Dark=#BBBBBB}"
                        HorizontalTextAlignment="Center" />

                    <!-- Suggested phrase -->
                    <Border
                        StrokeShape="RoundRectangle 8"
                        Stroke="{AppThemeBinding Light=#E0E0E0, Dark=#444444}"
                        BackgroundColor="{AppThemeBinding Light=#F8F8F8, Dark=#2A2A2A}"
                        Padding="16">
                        <VerticalStackLayout Spacing="6">
                            <Label
                                Text="Try this first:"
                                FontSize="12"
                                FontAttributes="Bold"
                                TextColor="{AppThemeBinding Light=#888888, Dark=#999999}" />
                            <Label
                                Text="&#x201C;Welcome to the future of voice.&#x201D;"
                                FontSize="16"
                                FontAttributes="Italic"
                                HorizontalTextAlignment="Center" />
                            <Label
                                Text="You can change this anytime."
                                FontSize="11"
                                TextColor="{AppThemeBinding Light=#AAAAAA, Dark=#777777}"
                                HorizontalTextAlignment="Center" />
                        </VerticalStackLayout>
                    </Border>

                    <!-- Primary CTA -->
                    <Button
                        Text="Speak"
                        Command="{Binding WelcomeSpeakCommand}"
                        FontSize="18"
                        FontAttributes="Bold"
                        HeightRequest="52"
                        BackgroundColor="{AppThemeBinding Light=#512BD4, Dark=#7C4DFF}"
                        TextColor="White"
                        HorizontalOptions="Fill" />

                    <!-- Skip -->
                    <Label
                        Text="Skip"
                        FontSize="13"
                        TextColor="{AppThemeBinding Light=#999999, Dark=#777777}"
                        TextDecorations="Underline"
                        HorizontalTextAlignment="Center">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding DismissWelcomeCommand}" />
                        </Label.GestureRecognizers>
                    </Label>

                </VerticalStackLayout>

            </Border>

        </Grid>

    </Grid>
</ContentPage>
